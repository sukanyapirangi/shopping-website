datasource db {
  provider = "sqlite"
  url = "file:./dev.db"

}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Int
  category    String
  status      String    @default("ACTIVE")
  imageUrl    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  OrderItems  OrderItem[]
}

model Order {
  id             Int         @id @default(autoincrement())
  customerName   String
  email          String
  contactNumber  String
  shippingAddress String
  status         String      @default("NEW")
  total          Float
  createdAt      DateTime    @default(now())
  items          OrderItem[]
}

model OrderItem {
  id        Int    @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  unitPrice Float
  lineTotal Float

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model AdminUser {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("ADMIN")
}


model User {
  id             Int      @id @default(autoincrement())
  name           String
  email          String   @unique
  password       String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}


